# Home Assistant Secrets
# Copy this file to secrets.yaml and fill in your actual values
# DO NOT commit secrets.yaml to git!

# SimpliSafe Credentials
# Required if configuring SimpliSafe integration manually
simplisafe_username: your_simplisafe_email@example.com
simplisafe_password: your_simplisafe_password

# Alexa Media Player Credentials (if not using Nabu Casa Cloud)
# Note: Nabu Casa Cloud is recommended and handles authentication automatically
# Only use these if configuring Alexa Media Player manually
alexa_email: your_amazon_email@example.com
alexa_password: your_amazon_password

# Other secrets can be added here as needed
# Example:
# api_key: your_api_key_here


